<% unless current_customer == customer %>
  <% if current_customer.following?(customer) %>
    <%= form_with model: current_customer.relationships.find_by(followed_id: customer.id) , method: :delete do |f| %>
      <%= hidden_field_tag :followed_id, customer.id %>
      <%= f.submit 'フォロー外す', class: 'btn btn-danger ' %>
    <% end %>
  <% else %>
    <%= form_with model: current_customer.relationships.build do |f| %>
      <%= hidden_field_tag :followed_id, customer.id %>
      <%= f.submit 'フォローする', class: 'btn btn-primary ' %>
    <% end %>
  <% end %>
<% end %>
