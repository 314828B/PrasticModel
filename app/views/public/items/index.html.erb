  <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'public/customers/info',customer:@customer,item:@item %>
        </div>
            <div class="col-md-8 offset-md-1">
              <h2>プラモデル</h2>
              <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>名前</th>
                  <th>プラモデル説明</th>
                  <th>写真</th>
                  <th>ジャンル</th>
                  <th colspan="3"></th>
                </tr>
          <%= render 'public/items/index',items:@items %>
              <div class="comments">
              <p>コメント件数：<%= @item.comments.count %></p>
              <table class="table">
                <% @item.comments.each do |comment| %>
                  <tr>
                    <td><%= comment.customer.name %></td>
                    <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>
                <% end %>
              </thead>
              </table>
            </div>
      </div>
  </div>