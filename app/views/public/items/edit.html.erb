<main>
  <p id="notice"></p>
    <div class="container">
      <div class="row"></div>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      		<h1>投稿編集</h1>
      		<%= form_with model:@book, local:true do |f| %>
      		<% if @item.errors.any? %>
          		<div id="error_explanation">
          			<h2><%= pluralize(@item.errors.count, "error") %> 投稿を編集しました！</h2>
          			<ul>
          				<% @item.errors.full_messages.each do |message| %>
          					<li><%= message %></li>
          				<% end %>
          			</ul>
          		</div>
          <% end %>
                <h4>名前</h4>
                  <%= f.text_field :name %><br>
                <br><h4>プラモデル概要</h4>
                	<%= f.text_area :introduction, rows:'10' %>
                	<p>
                		<br><%= f.submit "更新する",class: 'btn btn-success' %>
                	</p>
          <% end %>
                	<%= link_to"Show", item_path(@item.id) %>
                	 |
                	<%= link_to"Back", items_path %>
        </div>
      </div>
    </div
</main>