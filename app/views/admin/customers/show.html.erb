<div class = "container">

      <div class = "col-4 my-5 title" >
        <h4><%= @customer.name %>さんの会員詳細</h4>
      </div>

      <table class="table table-borderless">
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th>氏名</th><td><%= @customer.name %>&emsp;</td></tr>
        <tr><th>フリガナ</th><td><%= @customer.kana_name %>&emsp;</td></tr>
        <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
        <tr><th>会員ステータス</th><td>
           <% unless @customer.is_deleted %>
              <p class="text-success">有効</p>
           <% else %>
              <p class="text-muted">退会</p>
           <% end %>
           </td>
         </tr>
         <tr>
          <td></td>
          <td>
          <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success"  %>&emsp;
          <%= link_to "投稿一覧をみる", admin_items_path, class: "btn btn-primary" %>
          </td>
        </tr>

       </table>

</div>